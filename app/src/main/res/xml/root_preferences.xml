<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Chat">

        <EditTextPreference
            app:key="username"
            app:title="Username"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="color"
            app:title="Chat Color"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Cache">

        <SwitchPreferenceCompat
            app:key="offline"
            app:title="Offline mode" />


    </PreferenceCategory>

    <PreferenceCategory app:title="General">

        <CheckBoxPreference
            app:key="vibrate"
            app:title="Vibrate"/>


    </PreferenceCategory>

</PreferenceScreen>